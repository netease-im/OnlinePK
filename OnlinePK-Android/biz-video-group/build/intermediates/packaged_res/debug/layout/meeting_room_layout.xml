<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_video_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/lly_dialog_operation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/calling_control_bg"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_audio_control"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/src_mute_control" />

        <ImageView
            android:id="@+id/iv_video_control"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_gravity="center_vertical"
            android:src="@drawable/src_cam_control" />

        <ImageView
            android:id="@+id/iv_switch_camera"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_gravity="center_vertical"
            android:src="@drawable/camera_switch" />

        <ImageView
            android:id="@+id/iv_beauty_control"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_gravity="center_vertical"
            android:src="@drawable/src_beauty_control" />

        <ImageView
            android:id="@+id/iv_leave"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_gravity="center_vertical"
            android:src="@drawable/hungup" />
    </LinearLayout>


</RelativeLayout>
